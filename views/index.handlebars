<title>{{title}}</title>

<header>
  <h1 class="welcome-title flex-container">Mongo DB Scraper!</h1>
  <h2 class="article">Articles:</h2>
</header>
<section class="btn-section">

  <button type="submit" class="scrapeBtn">Scrape for New Articles</button>

</section>
<main class="flex-main">
  <section class="left-side">
    <section class="flex-ul">
      <h3>{{test}}</h3>
      <ul>
        {{#each articles}}
        <li>
          <div class="card" id="articles">
            <img src="{{image}}" />
            <div class="article-container">
              <h2>{{title}}</h2>
              <p>{{summary}}</p> <a href={{link}}>link to site</a>
              <div class="notes-container">
                <div class="circle">
                  <div class="addNotes" data-id="{{_id}}"> + Notes</div>
                </div>
                <div class="circle">
                  <div class="saveArticle" data-id="{{_id}}"> Save Article</div>
                </div>
                <div class="circle">
                  <div id="delete" data-id="{{_id}}">Delete Article</div>
                </div>
              </div>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </section>
  </section>

  <section class="right-side">
    <div id="notes"></div>
    <div id="noteShow">
      <h2>This is h2 title </h2>
      <p>This is paragraph</p>
      <div class="delete-container" data-id="{{_id}}"></div>
    </div>
  </section>
</main>